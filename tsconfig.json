{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,

    // Necessário para @decorators funcionarem
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Evita erro com propriedades obrigatórias no DTO
    "strictPropertyInitialization": false,

    "skipLibCheck": true
  },
  "include": ["src"]
}
